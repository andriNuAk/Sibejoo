<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ededed"
    card_view:cardBackgroundColor="#ededed"
    card_view:cardCornerRadius="0.5dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relMapelLearningLine">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relMapel">

            <TextView
                android:id="@+id/txtNamaMapelLearningLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/imgIconMapelLearningLine"
                android:text="TextView"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/imgIconMapelLearningLine"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>