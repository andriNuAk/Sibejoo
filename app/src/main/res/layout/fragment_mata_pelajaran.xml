<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vortex.sibejoo.MataPelajaranActivity$PlaceholderFragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="vortex.sibejoo.MapelActivity"
        tools:showIn="@layout/activity_mapel"
        android:background="#ededed">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#ededed"
                    android:orientation="vertical"
                    card_view:cardBackgroundColor="#d6d6d6"
                    card_view:cardCornerRadius="5dp"
                    android:id="@+id/cardTextHome">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp">

                        <TextView
                            android:id="@+id/txtText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pilih jenis mata pelajaran untuk menampilkan video "
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/imageView7" />

                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:tint="@color/colorPrimary"
                            android:layout_centerVertical="true"
                            app:srcCompat="@drawable/ic_school_black_24dp" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#ededed"
                    android:orientation="vertical"
                    card_view:cardBackgroundColor="#d6d6d6"
                    card_view:cardCornerRadius="5dp"
                    android:id="@+id/cardListMapel"
                    android:layout_below="@+id/cardTextHome">

                    <com.github.paolorotolo.expandableheightlistview.ExpandableHeightListView
                        android:id="@+id/listMapel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@null"
                        android:padding="10dp"
                        android:scrollbars="none">

                    </com.github.paolorotolo.expandableheightlistview.ExpandableHeightListView>
                </android.support.v7.widget.CardView>

            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>

</RelativeLayout>
